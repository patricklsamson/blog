<%= provide(:page_title, 'Archives') %>
<%= provide(:archives_active, 'active') %>

<%= link_to 'New Article', new_article_path, class: "float-end btn btn-outline-dark" %>
<h1>Archives(<%= Article.archived_count %>)</h1>

<div class="row">
  <% @articles.each do |article| %>
    <% if article.archived? %>
      <%= render 'articles/article', article: article %>
    <% end %>
  <% end %>
</div>
