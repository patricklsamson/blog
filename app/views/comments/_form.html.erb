<%= form_with model: [ @article, @article.comments.build ] do |f| %>
  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.label :status %><br />
    <%= f.select :status, ['public', 'private', 'archived'],
                          selected: 'public' %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
