<%= form_with model: [ @article, @article.comments.build ] do |f| %>
  <div class="form-floating mb-3">
    <%= f.text_area :body, class: "form-control", placeholder: "Add comment here" %>
    <%= f.label "Add comment here" %>
  </div>

  <div><%= f.submit class: "btn btn-success" %></div>
<% end %>
