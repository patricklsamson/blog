<%= provide(:page_title, 'All Articles') %>
<%= provide(:blog_active, 'active') %>

<%= link_to 'New Article', new_article_path, class: "float-end btn btn-outline-dark" %>
<h1>Articles</h1>
<p>This blog has <%= Article.public_count %>.</p>

<div class="row">
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <%= render 'article', article: article %>
    <% end %>
  <% end %>
</div>
